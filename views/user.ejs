<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Platform</title>
    <link rel="stylesheet" href="">
    <style>

body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    height: 100vh;
    margin: 0;
}

        .container{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .right .chatspace{
            background-color: white;
            width: 350px;
            height: 90vh;
            padding: 0 1rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .right .chatbox {
            position: relative;
            width: 100%;
            height: 85%;
        }

        .header{
            height: 12%;
            display: flex;
            justify-content: center;
            font-size: larger;
            align-items: center;
            border-bottom: 0.5px solid gainsboro;
        }
        .message-information{
            width : 100%;
            padding: 5px 0;
            display: flex;
            color: gainsboro;
        }

        .message-information div{
            position: relative;
            border-radius: 10px;
            padding: 20px;
            padding-bottom: 0;
            background-color: #3498db;
            max-width: 70%;
        }
        .message-information div span{
            width: 100rem;
            text-align: left;
        }

        .message-information div .timestamp{
            background-color: transparent;
            text-align: right;
            font-size: xx-small;
            padding:1rem;
            padding-left: 5rem;
        }

        .recipient{
            justify-content: left;
        }

        .messenger{
            justify-content: right;
        }

        .inputbox{
            position: absolute;
            display: flex;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            padding: 0;
            margin: 0;
        }
        .inputbox input{
            width: 80%;
            height: 30px;
            padding: .8rem;
            outline: none;
            border: .5px solid gainsboro;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }
        .inputbox button{
            width: 20%;
            padding: .8rem;
            color:white;
            background-color: #3498db;
            border: none;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- <div class="left">
            <h1>Chats</h1>
        </div> -->
        <div class="right">
           <div class="chatspace">
            <div class="header">
                <div class="recipient-name">
                    <span>Recipient Name</span>
                </div>
            </div>

            <div class="chatbox">
                <div class="message-information recipient">
                    <div>
                        <span class="span message">Hello there</span>
                        <div class=" timestamp">12:59 am</div>
                    </div>
                </div>
                <div class="message-information messenger">
                    <div>
                        <span class="span message">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Ducimus tempore reiciendis perspiciatis unde ullam quaerat. </span>
                        <div class=" timestamp">00:00 pm</div>
                    </div>
                </div>
                <div class="inputbox">
                    <input class="message" type="text">
                    <button type="submit">Send</button>
                </div>
            </div>

            

           </div>
        </div>
    </div>

    <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
    <script>
        const socket = io();

        socket.emit('message', "Hello there");

        socket.on('message', msg=>{
            console.log("Received message", msg)
        })
    </script>
</body>
</html>